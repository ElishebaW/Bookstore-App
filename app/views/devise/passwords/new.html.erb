<%= render 'welcomes/welcome' unless user_signed_in? %>
<div class="panel panel-default">
  <div class="panel-heading"><h2>Forgot Your Password...Already?</h2></div>
   <div class="panel-body">
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
      
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.text_field :email, autofocus: true, class:"form_control" %>
        </div>
        
      
        <div class="actions">
          <%= f.submit "Send me reset password instructions", class:"btn btn-success" %>
        </div>
      <% end %>
    <div>
  </div>
</div>
<div class="panel-footer"><%= render "devise/shared/links" %></div>
