<%= render 'welcomes/welcome' unless user_signed_in? %>
<div class="panel panel-default">
  <div class="panel-heading"><h2>Sign in!</h2></div>
   <div class="panel-body">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form_control">
    <%= f.label :email %><br />
    <%= f.text_field :email, autofocus: true, class: "form control" %>
  </div>

  <div class="form_control">
    <%= f.label :password %><br />
    <%= f.text_field :password, autocomplete: "off", class: "form control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="check box">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
  
  </br>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %>
  </div>
<% end %>

</br>
<div class="panel-footer"><%= render "devise/shared/links" %></end>
