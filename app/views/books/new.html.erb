<div class="panel panel-default">
  <div class="panel-heading"><h2>Add a Book to the Repository</h2></div>
   <div class="panel-body">
     <%= form_for Book.new do |f| %>
           <div class= "form group">
               <%= f.label :title, class: "col-xs-12 col-md-1" %> 
               <%= f.text_field :title , autofocus: true, class: "form control",  :size => "51.5" %>
           </div>
           </br>
           <div class= "form group">
               <%= f.label :description, class: "col-xs-12 col-md-1" %>
               <%= f.text_area :description , autofocus: true, class: "form control",  :cols => "50", :rows => "10"%>
            </div>  
             <div class="actions">
              <%= f.submit "Create", class:"btn btn-success" %>
             </div>
      <%end%>
     </div>   
   </div> 
 </div>